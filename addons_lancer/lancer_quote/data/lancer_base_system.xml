<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 定义组类 -->
        <!-- 定义根组类My Apps -->
        <record id="module_category_lancer" model="ir.module.category" >
            <field name="name">義成報價單權限設定</field>
            <field name="sequence" eval="0"/>
        </record>
        <record id="group_lancer_quote" model="res.groups">
            <field name="name">義成-1.0報價單</field>
            <field name="category_id" ref="module_category_lancer"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_lancer_payment_term" model="res.groups">
            <field name="name">義成-1.1付款條件</field>
            <field name="category_id" ref="module_category_lancer"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
       <!-- 貿易條件 -->
        <record id="group_lancer_incoterms" model="res.groups">
            <field name="name">義成-1.2貿易條件</field>
            <field name="category_id" ref="module_category_lancer"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="lancer_base_security_root" model="ir.module.category">
            <field name="name">義成資料維護權限</field>
            <field name="sequence" eval="1"/>
            <field name="parent_id" ref="module_category_lancer"/>
        </record>
       <record id="group_lancer_base_user" model="res.groups">
           <field name="name">義成-資料檢視</field>
           <field name="category_id" ref="lancer_base_security_root"/>
           <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
       </record>
        <record id="group_lancer_base_manage" model="res.groups">
           <field name="name">義成-資料維護</field>
           <field name="category_id" ref="lancer_base_security_root"/>
           <field name="implied_ids" eval="[(4, ref('lancer_quote.group_lancer_base_user'))]"/>
       </record>

    </data>
</odoo>