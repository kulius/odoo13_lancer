<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="lancer_metal_exposed_long_view_search" model="ir.ui.view">
            <field name="name">lancer.metal.exposed.long.search</field>
            <field name="model">lancer.metal.exposed.long</field>
            <field name="arch" type="xml">
                <search string="外露長度(mm)">
                    <field name="name"/>
                    <field name="active"/>
                    <separator/>
                    <filter name="archived" string="已封存" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="view_lancer_metal_exposed_long_tree" model="ir.ui.view">
            <field name="name">lancer.metal.exposed.long.tree</field>
            <field name="model">lancer.metal.exposed.long</field>
            <field name="arch" type="xml">
                <tree string="外露長度(mm)設定" editable="top">
                    <field name="name"/>
                    <field name="depth"/>
                </tree>
            </field>
        </record>

        <record id="view_lancer_metal_exposed_long_form" model="ir.ui.view">
            <field name="name">lancer.metal.exposed.long.form</field>
            <field name="model">lancer.metal.exposed.long</field>
            <field name="arch" type="xml">
                <form string="外露長度(mm)設定">
                    <sheet>
                        <widget name="web_ribbon" title="已封存" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="name"/>
                                <field name="depth"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_lancer_metal_exposed_long_form" model="ir.actions.act_window">
            <field name="name">外露長度(mm)設定</field>
            <field name="res_model">lancer.metal.exposed.long</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="lancer_metal_exposed_long_view_search"/>
        </record>



    </data>
</odoo>
