<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="edit_approval_wizard_form" model="ir.ui.view">
            <field name="name">edit.approval.wizard.form</field>
            <field name="model">edit.approval.wizard</field>
            <field name="arch" type="xml">
                <form string="编辑审批向导">
                    <group>
                        <group>
                            <field name="action_type" required="1"/>
                        </group>
                        <group/>
                    </group>
                    <group string="审批意见">
                        <field name="say"/>
                    </group>
                    <footer>
                        <button name="button_ok" type="object" string="确认" class="oe_highlight"/>
                        or
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
